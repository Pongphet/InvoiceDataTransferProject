<div class="jumbotron">
    <h1>Invoice Data Transferred</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS, and JavaScript.</p>
</div>
<div class="row">
    <div class="col-md-12">
        <h2>Invoice Uploading</h2>
        <form method="post" action="http://localhost:53309/Upload/UploadFiles" enctype="multipart/form-data" id="formUpload">
            <div>
                <label for="files">Files</label>
                <input type="file" id="files" name="files" />
            </div>
            <button type="button" id="btnUpload">Upload files</button>
        </form>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $('#btnUpload').on('click', function () {
        var data = new FormData();
        var files = $("#files").get(0).files;

        // Add the uploaded file to the form data collection  
        if (files.length > 0) {
            data.append("uploadFiles", files[0]);
        }

        // Ajax upload  
        $.ajax({
            type: "POST",
            url: $("#formUpload").attr("action"),
            contentType: false,
            processData: false,
            data: data,
            success: function (result) {
                alert(result);
            },
            error: function (result) {
                alert(result);
            }
        });
    }); 
</script>
